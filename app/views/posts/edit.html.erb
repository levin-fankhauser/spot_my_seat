<div class="flex flex-col pt-32 items-center">
  <div class="p-14 shadow-2xl rounded-3xl">
    <h1 class="text-xl font-bold mb-4">Edit Post</h1>
    <%= form_with(model: @post, local: true) do |form| %>
      <div class="mb-4">
        <%= form.label :title %>
        <%= form.text_field :title, class: "p-2 border rounded w-full" %>
      </div>
      <div class="mb-4">
        <%= form.label :content %>
        <%= form.text_area :content, rows: 4, class: "p-2 border rounded w-full" %>
      </div>
      <%= form.submit class: "bg-red-400 py-2 px-4 rounded-lg transition-all shadow-md hover:shadow-none flex justify-center mb-4 w-full" %>
    <% end %>
    <%= link_to 'Back', posts_path, class: "underline hover:no-underline transition-all" %>
  </div>
</div>