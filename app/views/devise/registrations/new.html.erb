<div class="flex flex-col pt-16 items-center">
  <div class="p-14 shadow-2xl rounded-3xl">
    <h2 class="text-xl font-bold mb-2">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages" , resource: resource %>
      <div class="field mb-4 mt-2">
        <%= f.label :username %><br />
        <%= f.text_field :username, maxlength: 20, autofocus: true, class: "rounded" %>
      </div>
      <div class="field mb-4">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded" %>
      </div>
      <div class="field mb-4">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(mindestens <%= @minimum_password_length %> Zeichen, Buchstaben, Zahlen & Sonderzeichen)</em>
        <% end %><br />
        <%= f.password_field :password, 
        autocomplete: "new-password", 
        class: "rounded", 
        data: { min_length: @minimum_password_length, pattern: "(?=.*[a-zA-Z])(?=.*\\d)(?=.*[\\W_]).{12,}" } %>
        <p id="password_error" class="text-red-500"></p>
      </div>
      <div class="field mb-4">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded" %>
      </div>
      <div class="actions">
        <%= f.submit "Sign up", class: "bg-red-400 py-2 px-4 rounded-lg transition-all shadow-md hover:shadow-none flex justify-center mb-4 w-full" %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
    <div class="underline hover:no-underline transition-all">
      <%= link_to "Home", root_path%>
    </div>
  </div>
</div>